<div class="bg-white p-4 sm:px-6 w-full h-32">
  <div class="flex space-x-3">
    <div class="shrink-0">
      <img class="size-10 rounded-full ring-2 ring-black"
        src="<% if (user.avatarId) { %>
                <%= `/stream/image/${comment.user.avatarId}` %>
            <% } else { %>
                <%= '../../icons/defaultUser.svg' %>
            <% } %>"
        alt="<%= user.username %>'s profile photo"
      />
    </div>
    <div class="min-w-0 flex-1">
      <p class="text-md font-semibold text-gray-900">
        <a href="/profile/<%= user.userId %>" class="hover:underline"><%= user.username %></a>
      </p>
      <p class="text-sm text-gray-500">
        <button class="hover:underline" onclick="searchWithDate('<%= date %>')"><%= new Date(date).toLocaleDateString() %></button>
      </p>
      <div class="mt-2">
        <p class="text-sm font-bold text-gray-800">
          <%= title %>
        </p>
        <p class="text-sm text-gray-600 line-clamp-2 overflow-hidden">
          <%= description || "(No Description)"%>
        </p>
      </div>
    </div>
    <div class="flex shrink-0 h-full">
