<div class="relative flex flex-col rounded-xl justify-between bg-[#E4E4E4] bg-clip-border text-gray-700 shadow-md h-full">
    <div class="h-80">
        <div class="relative mx-4 -mt-6 overflow-hidden rounded-xl bg-blue-gray-500 bg-clip-border text-white shadow-lg shadow-blue-gray-500/40 aspect-3/2">
            <% if (thumbnail) { %>
                <img src="data:image/jpeg;base64,<%= thumbnail %>" alt="img-blur-shadow" layout="fill"/>
            <% } else { %>
                <img src="../icons/image-placeholder.png" alt="img-blur-shadow" layout="fill"/>
            <% } %>
        </div>
        <div class="p-6">
            <h5 class="mb-2 block font-sans text-xl font-semibold leading-snug tracking-normal text-blue-gray-900 antialiased">
                <%= title %>
            </h5>
            <p class="block font-sans text-base font-light leading-relaxed text-inherit antialiased text-ellipsis w-full h-26 line-clamp-2">
                <%= description || "(No Description)" %>
            </p>
        </div>
    </div>
    <div class="p-6 pt-0 flex justify-between">
        <% const { mediaType } = query %>
        <a class="cursor-pointer justify-end select-none rounded-lg bg-royal-purple hover:bg-violet-blaze py-3 px-6 text-center align-middle font-sans text-xs font-bold uppercase text-white shadow-md transition-all disabled:pointer-events-none disabled:opacity-50 disabled:shadow-none flex items-center" href="/media/<%= mediaType.slice(0, -1) %>?id=<%= _id %>">
            Read More
        </a>
        <div>
            <a href="/profile/<%= user.userId %>" class="font-bold"><%= user.username %></a>
            <p class="flex justify-end"><%= new Date(date).toLocaleDateString() %></p>
        </div>
    </div>
</div>